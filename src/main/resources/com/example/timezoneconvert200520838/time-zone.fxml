<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.timezoneconvert200520838.controller.TimeZoneController"
      style="-fx-background-color: #add8e6;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Time Zone Converter" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="latitudeField" promptText="Latitude" style="-fx-font-weight: bold;"/>
    <TextField fx:id="longitudeField" promptText="Longitude" style="-fx-font-weight: bold;"/>

    <Button text="Get Timezone" onAction="#convertToTimeZone" fx:id="timezoneButton" style="-fx-font-size: 16px; -fx-background-color: #ffcc00;"/>

</VBox>
